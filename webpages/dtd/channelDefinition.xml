<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE channelDef SYSTEM "channelDefinition.dtd">
<channelDef>
	<description>
   	This is a channel for rendering local or remote RSS files
	</description>
	<params>
		<step>
			<ID>1</ID>
			<name>Provide RSS URL.</name>
			<description/>
			<parameter modify="publish-only">
				<name>prot</name>
				<label>Protocol</label>
				<type>
					<data>string</data>
					<base>single-choice</base>
					<display>radio</display>
					<restriction type="enumeration">
						<value>http://</value>
						<value>ftp://</value>
						<value default="true">file://</value>
					</restriction>
				</type>
				<defaultValue>http://</defaultValue>
			</parameter>
			<parameter modify="subscribe">
				<name>xml</name>
				<label>RSS</label>
				<type>
					<data>string</data>
					<base>text</base>
					<display>text</display>
					<length>30</length>
					<maxlength>40</maxlength>
					<restriction type="range">
						<min>0</min>
						<max>40</max>
					</restriction>
				</type>
				<defaultValue>webpages/stylehseets....</defaultValue>
			</parameter>
		</step>
		<step>
			<ID>2</ID>
			<name>How many healines do you want displayed?</name>
			<description>user sets limit on number of displayed headlines</description>
			<parameter modify="subscribe">
				<name>hlNum</name>
				<label>Number of headlines:</label>
				<type>
					<data>integer</data>
					<base>text</base>
					<display>text</display>
					<length>2</length>
					<maxlength>2</maxlength>
				</type>
				<defaultValue>5</defaultValue>
			</parameter>
		</step>
	</params>
</channelDef>
