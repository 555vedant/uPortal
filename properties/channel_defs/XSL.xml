<?xml version="1.0" encoding="UTF-8"?>
<channelDef>
	<description>
   	This is a channel for rendering local or remote RSS files
	</description>
	<params>
		<step>
			<ID>1</ID>
			<name>Provide XSL URI.</name>
			<!-- displayed at the top of the step screen -->
			<description/>
			<!-- intention is for documentation but could be used for other things -->
			<parameter modify="publish-only">
				<name>prot</name>
				<!-- the name value -->
				<label>Protocol</label>
				<!-- the field label -->
				<type base="string" input="single-choice" display="drop-down">
					<!-- more specific display type - if not specified the default will be displayed -->
					<restriction type="enumeration">
						<!-- list of values used -->
						<value>http://</value>
						<value default="true">file://</value>
						<!-- value flagged as default -->
					</restriction>
				</type>
			</parameter>
			<parameter modify="subscribe">
				<name>xsl</name>
				<label>XSL</label>
				<type base="string" input="text" display="text">
					<length>80</length>
					<!-- length and maxlength for text field -->
					<maxlength>100</maxlength>
					<restriction type="range">
						<!-- range could be used for error checking -->
						<min>0</min>
						<max>40</max>
					</restriction>
				</type>
				<defaultValue>webpages/stylehseets....</defaultValue>
				<!-- default value for text field -->
			</parameter>
		</step>
		<step>
			<ID>2</ID>
			<name>Provide XML URI.</name>
			<!-- displayed at the top of the step screen -->
			<description/>
			<!-- intention is for documentation but could be used for other things -->
			<parameter modify="publish-only">
				<name>prot</name>
				<!-- the name value -->
				<label>Protocol</label>
				<!-- the field label -->
				<type base="string" input="single-choice" display="drop-down">
 					<!-- more specific display type - if not specified the default will be displayed -->
					<restriction type="enumeration">
						<!-- list of values used -->
						<value>http://</value>
						<value default="true">file://</value>
						<!-- value flagged as default -->
					</restriction>
				</type>
			</parameter>
			<parameter modify="subscribe">
				<name>xml</name>
				<label>XML</label>
				<type base="string" input="text" display="text">
					<length>80</length>
					<!-- length and maxlength for text field -->
					<maxlength>100</maxlength>
					<restriction type="range">
						<!-- range could be used for error checking -->
						<min>0</min>
						<max>40</max>
					</restriction>
				</type>
				<defaultValue>webpages/stylehseets....</defaultValue>
				<!-- default value for text field -->
			</parameter>
		</step>
	</params>
	<controls/>
</channelDef>
