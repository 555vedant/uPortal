<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
>

    <parent>
        <groupId>org.jasig.portal</groupId>
        <artifactId>uportal-portlets-overlay</artifactId>
        <version>3.0.0-M5-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jasig.portal.portlets-overlay</groupId>
    <artifactId>wsrp-proxyportlet</artifactId>
    <packaging>war</packaging>

    <name>WSRP Proxy Portlet</name>
    <description>Overlay on the WSRP4j Proxy Portlet.</description>

    <dependencies>
        <!-- ===== WAR Overlay dependency ============================== -->
        <dependency>
            <groupId>wsrp4j</groupId>
            <artifactId>proxyportlet</artifactId>
            <type>war</type>
            <version>${wsrp4j.version}</version>
        </dependency>
        
        
        <!-- ===== Compile Time Dependencies ============================== -->
        
        <dependency>
            <groupId>wsrp4j</groupId>
            <artifactId>wsrp4j-shared</artifactId>
            <version>${wsrp4j.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <dependency>
            <groupId>wsrp4j</groupId>
            <artifactId>wsrp4j-consumer</artifactId>
            <version>${wsrp4j.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>wsrp4j</groupId>
            <artifactId>wsrp4j-proxyportlet</artifactId>
            <version>${wsrp4j.version}</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>javax.portlet</groupId>
            <artifactId>portlet-api</artifactId>
            <version>${portlet-api.version}</version>
            <scope>provided</scope>
        </dependency>
        
    </dependencies>

    <build>
        <plugins>
           <plugin>
                <groupId>org.apache.pluto</groupId>
                <artifactId>maven-pluto-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
