    <dependency>
      <type>jar</type>
      <groupId>concurrent</groupId>
      <artifactId>concurrent</artifactId>
      <version>1.3.4</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <type>jar</type>
      <groupId>backport-util-concurrent</groupId>
      <artifactId>backport-util-concurrent</artifactId>
      <version>1.1_01</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <type>jar</type>
      <groupId>whirlycache</groupId>
      <artifactId>whirlycache</artifactId>
      <version>0.7.1</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <type>jar</type>
      <groupId>oro</groupId>
      <artifactId>oro</artifactId>
      <version>2.0.8</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <type>jar</type>
      <groupId>jtidy</groupId>
      <artifactId>jtidy</artifactId>
      <version>4aug2000r7-dev</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <type>jar</type>
      <groupId>wsrp4j</groupId>
      <artifactId>wsrp4j-shared</artifactId>
      <version>0.3</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <type>jar</type>
      <groupId>wsrp4j</groupId>
      <artifactId>wsrp4j-consumer</artifactId>
      <version>0.3</version>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <type>jar</type>
      <groupId>proxyportlet</groupId>
      <artifactId>proxyportlet</artifactId>
      <version>1.0</version>
