<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <subflow-state id="personLookup" subflow="person-lookup">
        <input name="showCancelButton" value="'false'" />
        <input name="personSearchResults_selectAndGoButtonTextKey" value="'personSearchResults.resetUserLayoutButton'" />
        <input name="personDetails_selectAndGoButtonTextKey" value="'personDetails.resetUserLayoutButton'" />
        
        <output name="person" />

        <transition to="personLookup" on="cancelPersonLookup" />
        <transition to="reset-confirm" on="returnSelectedPerson" />
    </subflow-state>
    
    <view-state id="reset-confirm">
        <transition on="confirm" to="reset-result">
            <evaluate expression="userLayoutHelper.resetUserLayout(person)"/>
        </transition>
        <transition on="cancel" to="personLookup"/>
    </view-state>
    
    <view-state id="reset-result">
        <transition on="continue" to="reset-complete">
            <evaluate expression="userLayoutHelper.resetUserLayout(person)"/>
        </transition>
        
    </view-state>
    
    <end-state id="reset-complete"/>
</flow>