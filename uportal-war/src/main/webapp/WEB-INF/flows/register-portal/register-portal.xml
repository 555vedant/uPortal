<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
            
    <!-- Used to set default values for inputs -->
    <action-state id="initVariables">
        <evaluate result="flowScope.registrationRequest" expression="portalRegistrationHelper.createRegistrationRequest()" />

        <transition to="registrationForm" />
    </action-state>
            
    <view-state id="registrationForm" model="registrationRequest">
        <transition on="previewRegistration" to="previewRegistrationData" />
    </view-state>
    
    <!-- Execute the lookup query and transition to the appropriate state based on the number of results -->
    <view-state id="previewRegistrationData">
        <on-entry>
            <evaluate result="flowScope.registrationData" expression="portalRegistrationHelper.getRegistrationData(registrationRequest)" />
        </on-entry>
        
        <transition on="editRegistration" to="registrationForm" />
        <transition on="submitRegistration" to="submitRegistration" /> 
    </view-state>

    <action-state id="submitRegistration">
        <evaluate result="requestScope.submitStatus" expression="portalRegistrationHelper.submitRegistration(registrationData)" />
        
        <transition to="verifyRegistration" />
    </action-state>
    <decision-state id="verifyRegistration">
        <if test="requestScope.submitStatus" then="registrationSuccess" else="registrationFailed" />    
    </decision-state>
    
    <view-state id="registrationSuccess">
        <transition on="registrationForm" to="registrationForm" />
    </view-state>
    
    <view-state id="registrationFailed">
        <transition on="registrationForm" to="registrationForm" />
    </view-state>
</flow>
