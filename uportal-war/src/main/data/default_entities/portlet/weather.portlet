<portlet-definition script="classpath://org/jasig/portal/io/import-portlet_v3-3.crn"> 
  <title>My Weather</title>
  <name>My Weather</name>
  <fname>weather</fname>
  <desc>The Weather Module allows you to access the latest weather conditions and 5-day forecasts for the cities you select.</desc>  
  <type>Portlet</type>
  <portlet-descriptor>
    <webAppName>/WeatherPortlet</webAppName>
    <portletName>Weather</portletName>
    <isFramework>false</isFramework>
  </portlet-descriptor>
  <timeout>15000</timeout>
  <hasedit>true</hasedit>
  <hashelp>false</hashelp>
  <hasabout>false</hasabout>
  <categories>
    <category>Information</category>
  </categories>
  <groups>
    <group>Everyone</group>
  </groups>
  <parameters>
    <parameter> 
      <name>portletName</name>  
      <value>Weather</value>  
    </parameter>
	<parameter>
      <name>iconUrl</name>
      <value>/ResourceServingWebapp/rs/tango/0.8.90/32x32/status/weather-few-clouds.png</value>
    </parameter>
  </parameters>
  <portletPreferences>
    <portletPreference>
      <name>locationCodes</name>
      <read-only>FALSE</read-only>
      <values>
        <value>Los Angeles, CA, USA</value>
        <value>New York, NY, USA</value>
        <value>Paris, France</value>
        <value>Tokyo, Japan</value>
      </values>
    </portletPreference>
    <portletPreference>
      <name>locations</name>
      <read-only>FALSE</read-only>
      <values>
		<value>Los Angeles, CA</value>
        <value>New York, NY</value>
        <value>Paris, France(Ile-De-France)</value>
        <value>Tokyo, Japan(Tokyo)</value>
      </values>
    </portletPreference>
    <portletPreference>
      <name>units</name>
      <read-only>FALSE</read-only>
      <values>
        <value>F</value>
        <value>F</value>
        <value>C</value>
        <value>C</value>
      </values>
    </portletPreference>
  </portletPreferences> 
</portlet-definition>