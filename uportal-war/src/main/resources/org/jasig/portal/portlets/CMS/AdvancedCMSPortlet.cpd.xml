<portlet-publishing-definition
    xmlns="https://source.jasig.org/schemas/uportal/portlet-publishing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://source.jasig.org/schemas/uportal/portlet-publishing ../../../../../xsd/portlet-publishing/portlet-publishing-definition.xsd">

    <step>

        <name>Portlet Descriptor</name>

        <description>
            Enter the Portlet web-application path and portlet name.
        </description>

        <parameter>
            <name>isFrameworkPortlet</name>
            <label>Framework Portlet</label>
            <description>
              Portlet is deployed in the same web-application as uPortal. If checked "Portlet Web Application Path"
              is ignored.
            </description>
            <single-choice-parameter-input>
                <default>true</default>
                <option value="true" label="true" />
                <option value="false" label="false" />
            </single-choice-parameter-input>
        </parameter>

        <parameter>
            <name>portletApplicationId</name>
            <label>Portlet Web Application Path</label>
            <description>
              This is the name of the web application the portlet resides in including a preceding /.
            </description>
            <example>/pluto-testsuite</example>
            <single-text-parameter-input>
                <default>/SimpleContentPortlet</default>
            </single-text-parameter-input>
        </parameter>

        <parameter>
            <name>portletName</name>
            <label>Portlet Name</label>
            <description>
              This is the name of the portlet as defined in the portlet.xml descriptor.
            </description>
            <example>test-port-et-1</example>
            <single-text-parameter-input>
                <default>cms</default>
            </single-text-parameter-input>
        </parameter>

        <parameter>
            <name>disableDynamicTitle</name>
            <label>Disable Dynamic Title</label>
            <description>
              Disable dynamic title
            </description>
            <example>false</example>
            <single-choice-parameter-input>
                <default>true</default>
                <option value="true" label="true" />
                <option value="false" label="false" />
            </single-choice-parameter-input>
        </parameter>

        <preference>
            <name>cleanContent</name>
            <label>Clean Content</label>
            <description>
              Clean content
            </description>
            <example>false</example>
            <single-choice-preference-input>
                <default>false</default>
                <option value="true" label="true" />
                <option value="false" label="false" />
            </single-choice-preference-input>
        </preference>

    </step>

</portlet-publishing-definition>