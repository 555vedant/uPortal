<portlet-publishing-definition
    xmlns="https://source.jasig.org/schemas/uportal/portlet-publishing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://source.jasig.org/schemas/uportal/portlet-publishing ../../../../../xsd/portlet-publishing/portlet-publishing-definition.xsd">

    <step>

        <name>Image information</name>

        <description>
            Enter the image URI, dimensions, border, and URL to link to if the
            image is clicked
          </description>

        <parameter>
            <name>isFrameworkPortlet</name>
            <label>Framework Portlet</label>
            <description>
              Portlet is deployed in the same web-application as uPortal. If checked "Portlet Web Application Path"
              is ignored.
            </description>
            <single-choice-parameter-input display="hidden">
                <default>true</default>
                <option value="false" label="false" />
                <option value="true" label="true" />
            </single-choice-parameter-input>
        </parameter>

        <parameter>
            <name>portletName</name>
            <label>Portlet Name</label>
            <example>Image</example>
            <single-text-parameter-input display="hidden">
                <default>Image</default>
            </single-text-parameter-input>
        </parameter>

        <parameter>
            <name>disableDynamicTitle</name>
            <label>Disable Dynamic Title</label>
            <single-choice-parameter-input display="hidden">
                <default>true</default>
                <option value="false" label="false" />
                <option value="true" label="true" />
            </single-choice-parameter-input>
        </parameter>

        <preference>
            <name>img-uri</name>
            <label>Image URI</label>
            <example>http://www.mysite.com/image.jpg</example>
            <single-text-preference-input display="text" />
        </preference>

        <preference>
            <name>alt-text</name>
            <label>Image alt-text</label>
            <example>Photo of two roads diverging in a yellow wood</example>
            <single-text-preference-input display="text" />
        </preference>

        <preference>
            <name>img-width</name>
            <label>Image width (pixels)</label>
            <single-text-preference-input display="text">
                <default>400</default>
            </single-text-preference-input>
        </preference>

        <preference>
            <name>img-height</name>
            <label>Image height (pixels)</label>
            <single-text-preference-input display="text">
                <default>400</default>
            </single-text-preference-input>
        </preference>

        <preference>
            <name>img-border</name>
            <label>Image border (pixels)</label>
            <single-text-preference-input display="text">
                <default>0</default>
            </single-text-preference-input>
        </preference>

        <preference>
            <name>img-link</name>
            <label>Image link</label>
            <example>http://www.mysite.com</example>
            <single-text-preference-input display="text" />
        </preference>
    </step>

    <step>
        <name>Image captions</name>
        <description>
            Remember, the display of image captions is stylesheet dependent
            and may not display on all devices
          </description>

        <preference>
            <name>caption</name>
            <label>Caption</label>
            <example>My Image</example>
            <single-text-preference-input display="text" />
        </preference>

        <preference>
            <name>subcaption</name>
            <label>Sub-caption</label>
            <example>Refreshes every hour</example>
            <single-text-preference-input display="text" />
        </preference>

    </step>

</portlet-publishing-definition>