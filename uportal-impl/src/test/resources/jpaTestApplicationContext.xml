<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
    
    <bean id="rdbmPropertiesPlacholder" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:/properties/dataSource.properties" />
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
        <property name="driverClassName" value="${jdbcDriver}" />
        <property name="url" value="${jdbcUrl}" />
        <property name="username" value="${jdbcUser}" />
        <property name="password" value="${jdbcPassword}" />
        <property name="suppressClose" value="true" />
        <property name="autoCommit" value="true" />
    </bean>

    <bean id="factoryBean" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="jpaVendorAdapter" ref="jpaVendorAdapter" />
    </bean>

    <bean id="jpaVendorAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="true" />
        <property name="database" value="${jdbcDatabase}" />
    </bean>

    <bean id="portletDefinitionDao" class="org.jasig.portal.portlet.dao.jpa.JpaPortletDefinitionDao">
        <property name="channelRegistryStore" ref="channelRegistryStore" />
    </bean>
    
    <bean id="portletEntityDao" class="org.jasig.portal.portlet.dao.jpa.JpaPortletEntityDao">
        <property name="portletDefinitionDao" ref="portletDefinitionDao" />
    </bean>
    
    <util:constant id="CHANNEL_PARAM__PORTLET_APPLICATION_ID" static-field="org.jasig.portal.channels.portlet.IPortletAdaptor.CHANNEL_PARAM__PORTLET_APPLICATION_ID"/>
    <util:constant id="CHANNEL_PARAM__PORTLET_NAME" static-field="org.jasig.portal.channels.portlet.IPortletAdaptor.CHANNEL_PARAM__PORTLET_NAME"/>
    
    <bean id="channelRegistryStore" class="org.jasig.portal.mock.MockChannelRegistryStore">
        <property name="channelDefinitions">
            <set>
                <bean class="org.jasig.portal.ChannelDefinition">
                    <constructor-arg value="1" />
                    <property name="parameters">
                        <list>
                            <bean class="org.jasig.portal.ChannelParameter">
                                <constructor-arg index="0" ref="CHANNEL_PARAM__PORTLET_APPLICATION_ID" />
                                <constructor-arg index="1" value="appId" />
                                <constructor-arg index="2" value="true" />
                            </bean>
                            <bean class="org.jasig.portal.ChannelParameter">
                                <constructor-arg index="0" ref="CHANNEL_PARAM__PORTLET_NAME" />
                                <constructor-arg index="1" value="portName" />
                                <constructor-arg index="2" value="true" />
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean class="org.jasig.portal.ChannelDefinition">
                    <constructor-arg value="2" />
                    <property name="parameters">
                        <list>
                            <bean class="org.jasig.portal.ChannelParameter">
                                <constructor-arg index="0" ref="CHANNEL_PARAM__PORTLET_APPLICATION_ID" />
                                <constructor-arg index="1" value="appId" />
                                <constructor-arg index="2" value="true" />
                            </bean>
                            <bean class="org.jasig.portal.ChannelParameter">
                                <constructor-arg index="0" ref="CHANNEL_PARAM__PORTLET_NAME" />
                                <constructor-arg index="1" value="portName" />
                                <constructor-arg index="2" value="true" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </set>
        </property>
    </bean>


    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="factoryBean" />
    </bean>

    <bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />
    
    <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" />
</beans>


