<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.generate_statistics">true</property>
        
        <property name="hibernate.cache.use_query_cache">true</property>
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.jdbc.batch_size">25</property>
        
        <property name="hibernate.current_session_context_class">thread</property>
        
        <mapping resource="properties/db/global.hbm.xml"/> 
        <mapping class="org.jasig.portal.layout.dlm.Evaluator" />
        <mapping class="org.jasig.portal.layout.dlm.FragmentDefinition" />
        <mapping class="org.jasig.portal.layout.dlm.providers.AllUsersEvaluatorFactory" />
        <mapping class="org.jasig.portal.layout.dlm.providers.AttributeEvaluator" />
        <mapping class="org.jasig.portal.layout.dlm.providers.GroupMembershipEvaluator" />
        <mapping class="org.jasig.portal.layout.dlm.providers.GuestUserEvaluatorFactory" />
        <mapping class="org.jasig.portal.layout.dlm.providers.Paren" />
        <mapping class="org.jasig.portal.channel.dao.jpa.ChannelDefinitionImpl" />
        <mapping class="org.jasig.portal.channel.dao.jpa.ChannelTypeImpl" />
        <mapping class="org.jasig.portal.portlet.dao.jpa.PortletDefinitionImpl" />
        <mapping class="org.jasig.portal.portlet.dao.jpa.PortletEntityImpl" />
        <mapping class="org.jasig.portal.portlet.dao.jpa.PortletPreferencesImpl" />
        <mapping class="org.jasig.portal.portlet.dao.jpa.PortletPreferenceImpl" />
        
        <class-cache class="org.jasig.portal.layout.dlm.Evaluator" usage="nonstrict-read-write"/>
        <class-cache class="org.jasig.portal.channel.dao.jpa.ChannelDefinitionImpl" usage="nonstrict-read-write"/>
        <class-cache class="org.jasig.portal.channel.dao.jpa.ChannelTypeImpl" usage="nonstrict-read-write"/>
        <class-cache class="org.jasig.portal.portlet.dao.jpa.PortletDefinitionImpl" usage="nonstrict-read-write"/>
        <class-cache class="org.jasig.portal.portlet.dao.jpa.PortletEntityImpl" usage="nonstrict-read-write"/>
        <class-cache class="org.jasig.portal.portlet.dao.jpa.PortletPreferencesImpl" usage="nonstrict-read-write"/>
        <class-cache class="org.jasig.portal.portlet.dao.jpa.PortletPreferenceImpl" usage="nonstrict-read-write"/>
        
        <collection-cache collection="org.jasig.portal.portlet.dao.jpa.PortletPreferencesImpl.portletPreferences" usage="nonstrict-read-write"/>
        <collection-cache collection="org.jasig.portal.portlet.dao.jpa.PortletPreferenceImpl.values" usage="nonstrict-read-write"/>
    </session-factory>
</hibernate-configuration>
