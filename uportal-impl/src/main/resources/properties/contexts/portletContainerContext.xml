<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
>

    <bean id="portletContainer" class="org.jasig.portal.portlet.container.PortletContainerFactoryBean">
        <property name="requiredContainerServices" ref="requiredContainerServices" />
        <property name="optionalContainerServices" ref="optionalContainerServices" />
    </bean>
    
    <!--********** Container Services ********** -->

    <bean id="requiredContainerServices" class="org.jasig.portal.portlet.container.services.RequiredContainerServicesImpl">
        <property name="portalContext" ref="portalContext" />
        <property name="portalCallbackService" ref="portalCallbackService" />
    </bean>

    <bean id="optionalContainerServices" class="org.jasig.portal.portlet.container.services.OptionalContainerServicesImpl">
        <property name="userInfoService" ref="userInfoService" />
    </bean>

    <bean id="portalContext" class="org.jasig.portal.portlet.container.PortalContextImpl">
        <property name="windowStates">
            <set value-type="javax.portlet.WindowState">
                <value>MINIMIZED</value>
                <value>NORMAL</value>
                <value>MAXIMIZED</value>
                <value>EXCLUSIVE</value>
            </set>
        </property>
        <property name="portletModes">
            <set value-type="javax.portlet.PortletMode">
                <value>VIEW</value>
                <value>EDIT</value>
                <value>HELP</value>
            </set>
        </property>
    </bean>

    <bean id="portalCallbackService" class="org.jasig.portal.portlet.container.services.PortalCallbackServiceImpl">
        <property name="requestPropertiesManager" ref="requestPropertiesManager" />
        <property name="portletWindowRegistry" ref="portletWindowRegistry" />
        <property name="portletUrlSyntaxProvider" ref="portletUrlSyntaxProvider" />
    </bean>

    <bean id="requestPropertiesManager" class="org.jasig.portal.portlet.container.properties.RequestPropertiesManagerBroker">
        <property name="propertiesManagers">
            <list value-type="org.jasig.portal.portlet.container.properties.IRequestPropertiesManager">
                <bean class="org.jasig.portal.portlet.container.properties.HttpRequestPropertiesManager" />
                <bean class="org.jasig.portal.portlet.container.properties.CacheRequestPropertiesManager" />
            </list>
        </property>
    </bean>
    
    <bean id="userInfoService" class="org.jasig.portal.portlet.container.services.PersonDirectoryUserInfoService">
        <property name="optionalContainerServices" ref="optionalContainerServices" />
        <property name="portletWindowRegistry" ref="portletWindowRegistry" />
        <property name="portletEntityRegistry" ref="portletEntityRegistry" />
        <property name="personAttributeDao" ref="personAttributeDao" />
    </bean>
    
    <bean id="portletUrlSyntaxProvider" class="org.jasig.portal.portlet.url.PortletUrlSyntaxProviderImpl">
        <property name="portletWindowRegistry" ref="portletWindowRegistry" />
    </bean>
    
    
    <!--********** Portlet Registries ********** -->

    <bean id="portletWindowRegistry" class="org.jasig.portal.portlet.registry.PortletWindowRegistryImpl">
        <property name="portletEntityRegistry" ref="portletEntityRegistry" />
    </bean>

    <bean id="portletEntityRegistry" class="org.jasig.portal.portlet.registry.PortletEntityRegistryImpl">
        <property name="portletDefinitionRegistry" ref="portletDefinitionRegistry" />
        <property name="portletEntityDao" ref="portletEntityDao" />
    </bean>
    
    <bean id="portletDefinitionRegistry" class="org.jasig.portal.portlet.registry.PortletDefinitionRegistryImpl">
        <property name="portletDefinitionDao" ref="portletDefinitionDao" />
    </bean>
    
    <!--********** Portlet DAOs ********** -->
    
    
    
    
    <!--********** Portlet Rendering Channel ********** -->
    
    <bean id="portletChannel" class="org.jasig.portal.channels.portlet.SpringPortletChannelImpl">
        <property name="optionalContainerServices" ref="optionalContainerServices" />
        <property name="portletContainer" ref="portletContainer" />
        <property name="portletDefinitionRegistry" ref="portletDefinitionRegistry" />
        <property name="portletEntityRegistry" ref="portletEntityRegistry" />
        <property name="portletWindowRegistry" ref="portletWindowRegistry" />
        <property name="portletRequestParameterManager" ref="portletRequestParameterManager" />
    </bean>
</beans>
