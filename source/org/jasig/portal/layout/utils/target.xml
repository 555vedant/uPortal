<?xml version="1.0" encoding="utf-8"?>

<target name="alinstall" depends="compile">
    <property name="action" value=" "/>
    <echo message="Aggregated layouts configuration utility"/>
    <java fork="true" dir="${basedir}" failonerror="true" classname="org.jasig.portal.layout.utils.ALMigrationUtil">
        <arg value="${action}"/>
      <classpath>
        <pathelement path="${build.home}/WEB-INF/classes"/>
        <pathelement path="${xalan.jar}"/>
        <pathelement path="${xerces.jar}"/>
        <pathelement path="${xml-apis.jar}"/>
        <pathelement path="${log4j.jar}"/>
        <pathelement path="${jdbcDriver.jar}"/>
        <pathelement path="${poolman.jar}"/>
        <pathelement path="${jdbc20.jar}"/>
        <pathelement path="${servlet.jar}"/>
      </classpath>
    </java>
</target>
